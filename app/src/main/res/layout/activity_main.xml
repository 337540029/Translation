<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--fragment的主容器 （主）FragmentOnline、FragmentOffline、FragmentGlossary-->
        <FrameLayout
            android:id="@+id/main_framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

        <!--底部导航栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/selector_btm"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvOnline"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/selector_btn"
                android:gravity="center"
                android:text="@string/online"
                android:textColor="@drawable/selector_tv" />

            <TextView
                android:id="@+id/tvOffline"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/selector_btn"
                android:gravity="center"
                android:text="@string/offline"
                android:textColor="@drawable/selector_tv" />

            <TextView
                android:id="@+id/tvAbout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/selector_btn"
                android:gravity="center"
                android:text="@string/glossary"
                android:textColor="@drawable/selector_tv" />
        </LinearLayout>

        <!--这个是用来作为 FragmentCardMode（副） 的父容器-->
        <FrameLayout
            android:id="@+id/aux_framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawerlayout_nav_header"
        app:menu="@menu/drawerlayout_nav_menu">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>