<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.personal.asus.translation">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.personal.asus.translation.activity.MainActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- 启用search dialog -->
            <!-- 配合singleTop直接使用自己，无需重新创建新的Activity，例如无需创建下面的SearchActivity， -->
            <!-- value指明了跳转到哪个Activity -->
            <!-- 其实这段可以忽略不写，不过为了方便理解 -->
            <meta-data
                android:name="android.app.default_searchable"
                android:value="com.example.asus.translation.MainActivity" />

            <!-- 声明该活动是用来处理搜索结果的活动 -->
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <!-- 下面的声明是必须的，resource声明了searchable引用的是哪个配置文件 -->
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <activity android:name="com.personal.asus.translation.SearchActivity">

            <!-- 声明action为SEARCH -->
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <!-- 下面的声明是必须的 -->
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <!--exported="false" 意思是除了你自己以及你给予授权的人，其他任何人都不允许使用这个Provider-->
        <provider
            android:name="com.personal.asus.translation.OnlineSuggestionProvider"
            android:authorities="com.personal.asus.translation.OnlineSuggestionProvider"
            android:exported="false" />

        <service
            android:name="com.personal.asus.translation.DownloadService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>